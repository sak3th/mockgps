<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actions.ActionsFragment">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/actionsLayout"
      android:orientation="vertical"
      android:background="@drawable/bottom_actions_background"
      android:paddingTop="10dp"
      app:layout_behavior="@string/bottom_sheet_behavior"
      >
    <include layout="@layout/action_search"/>

    <include layout="@layout/action_mock_c"/>

    <include layout="@layout/action_dev_settings"/>
  </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>