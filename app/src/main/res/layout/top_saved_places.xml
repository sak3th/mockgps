<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topSavedPlacesContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:elevation="0dp"
    android:background="@drawable/card_background"
    >

  <TextView
      android:layout_width="0dp" android:layout_height="wrap_content"
      android:id="@+id/textViewSavedPlacesHeader"
      android:text="Saved Places"
      android:textSize="20sp"
      app:fontFamily="@font/product_sans"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toStartOf="@id/imageViewNext"/>

  <ImageView
      android:id="@+id/imageViewNext"
      android:layout_width="24dp" android:layout_height="24dp"
      app:srcCompat="@drawable/ic_navigate_next"
      app:layout_constraintStart_toEndOf="@id/textViewSavedPlacesHeader"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <androidx.recyclerview.widget.RecyclerView
      android:layout_width="0dp" android:layout_height="wrap_content"
      android:id="@+id/recyclerTopSavedPlaces"
      app:layout_constraintTop_toBottomOf="@id/textViewSavedPlacesHeader"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      android:elevation="0dp"
      android:background="@drawable/card_background"
      tools:itemCount="3"
      tools:listitem="@layout/item_search_result"
      >

  </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>